@{
	var currentSite = await WebApp.Site.GetContentAsync<DemoSite>();
}
<!--section liên hệ-->
<div id="lienhe" class="padding_section max-width px-3">
	<div class="px-80">
		<div class="row bg_green rounded-box">
			<div class="d-none d-md-block">
				<svg class="vector1" xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
					<path d="M20 0.0410156H0V20.041H20V0.0410156Z" fill="#008573" style="opacity:0.3" />
				</svg>
				<svg class="vector2" xmlns="http://www.w3.org/2000/svg" width="30" height="31" viewBox="0 0 30 31" fill="none">
					<path d="M30 0.0415039H0V30.0415H30V0.0415039Z" fill="#008573" style="opacity:0.3" />
				</svg>
				<svg class="vector3" xmlns="http://www.w3.org/2000/svg" width="58" height="59" viewBox="0 0 58 59" fill="none">
					<path d="M58 0.0415077H0V58.0415H58V0.0415077Z" fill="#008573" style="opacity:0.3" />
				</svg>
				<svg class="vector4" xmlns="http://www.w3.org/2000/svg" width="70" height="71" viewBox="0 0 70 71" fill="none">
					<path d="M0 0.0415039H70V70.0415H0V0.0415039Z" fill="#008573" style="opacity:0.3" />
				</svg>
			</div>
			<div class="col-sm-5 p-mix1">
				<h2 class="heading_2_bold text-white mb-16">
					ĐĂNG KÝ NHẬN TƯ VẤN TỪ TRUNG TÂM KINH DOANH
				</h2>
				<p class="body1 text-white">
					Quý khách vui lòng liên hệ với Apec qua điện thoại, email hoặc
					điền vào mẫu thông tin để được tư vấn
				</p>
			</div>
			<div class="col-sm-7 p-mix2">
				<div id="overlay" class="overlay"></div>
				<div id="loading" class="lds-ring"><div></div><div></div><div></div><div></div></div>
				<form class="form-content" id="myForm">
					<div class="form-name-phone">
						<div class="flex-1">
							<input type="text"
								   class="form-control"
								   id="hoTen"
								   placeholder="Họ và tên*" />


							<p id="error4" class="none color-red text-error mt-2"> Vui lòng nhập TÊN để nhận tư vấn</p>
						</div>
						<div class="flex-1">

							<input type="tel"
								   class="form-control"
								   id="soDienThoai"
								   placeholder="Số điện thoại*" />
							<p id="error5" class="none color-red text-error mt-2 "> Vui lòng nhập SĐT hợp lệ </p>
						</div>
					</div>

					<div>

						<input type="email"
							   class="form-control"
							   id="email"
							   placeholder="Email" />
						<p id="errorEmail2" class="none color-red text-error mt-2 "> Vui lòng nhập EMAIL hợp lệ </p>
					</div>
					<div class="form-policy-btn">
						<div class="flex pointer align-items-start form-policy">
							<input type="checkbox" class="form-check-input" id="dongY" checked/>
							<div>
								<label class="form-check-label body2 text-white" for="dongY">Tôi đồng ý nhận thông tin từ TTKD Apec group</label>
								<p id="error6" class="none color-red text-error mt-2"> Vui lòng đồng ý nhận thông tin từ TTKD Apec group</p>
							</div>
						</div>
						<button type="submit" class="btn_lienhe">Đăng ký ngay</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<span style="display:none" id="mailReceiver">@currentSite.MailReceiver</span>
</div>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="~/assets/js/flatpickr.js"></script>