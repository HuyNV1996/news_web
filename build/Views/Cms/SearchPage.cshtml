@model web_ttkd.Models.SearchPage
@{
    ViewBag.Title = Model.Title;
}

<div id="banner">
    @if (Model.Banner != null && Model.Banner.ImageBanner.Media.PublicUrl != null)
    {
        <img class="w-100 h-50 object-cover" src="@(Model.Banner.ImageBanner.Media.PublicUrl.Substring(1) ?? "")" alt="@Model.Banner.ImageBanner.Media.PublicUrl.Substring(1)" />
    }
    else
    {
        <p>Chưa cấu hình banner</p>
    }
    <div class="banner-content ">
        <h5 class="banner-title uppercase">@Model.Banner.Title</h5>
    </div>
</div>
<section id="news">
    <div class="row post_popular px-80">
        @if(ViewBag.lstPosts.Count > 0)
        {
            @foreach (var item in ViewBag.lstPosts)
            {
                <div class="col-sm-4">
                    <div class="post-popular_card">
                        <div class="img_post">
                            <a href="@item.Permalink">
                                <img class="w-full" style="height:240px; object-fit:cover;" src="@Url.Content(item.PrimaryImage.Media?.PublicUrl)" alt="">
                            </a>
                        </div>
                        <div class="news_popular">
                            <div class="new_popular_title">
                                @item.Category.Title
                            </div>
                            <a href="@item.Permalink" class="new_popular_content short-paragraph">
                                @item.Title
                            </a>
                            <div class="new_popular_At">
                                @item.Published
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Not Found Page HTML -->
            <div class="page-not-found pt-5">
                <div class="bg-light shadow page-404-content">
                    <h2>
                        4<svg xmlns="http://www.w3.org/2000/svg" width="110" height="110" fill="currentColor" class="bi bi-bug" viewBox="0 0 16 16">
                            <path d="M4.355.522a.5.5 0 0 1 .623.333l.291.956A4.979 4.979 0 0 1 8 1c1.007 0 1.946.298 2.731.811l.29-.956a.5.5 0 1 1 .957.29l-.41 1.352A4.985 4.985 0 0 1 13 6h.5a.5.5 0 0 0 .5-.5V5a.5.5 0 0 1 1 0v.5A1.5 1.5 0 0 1 13.5 7H13v1h1.5a.5.5 0 0 1 0 1H13v1h.5a1.5 1.5 0 0 1 1.5 1.5v.5a.5.5 0 1 1-1 0v-.5a.5.5 0 0 0-.5-.5H13a5 5 0 0 1-10 0h-.5a.5.5 0 0 0-.5.5v.5a.5.5 0 1 1-1 0v-.5A1.5 1.5 0 0 1 2.5 10H3V9H1.5a.5.5 0 0 1 0-1H3V7h-.5A1.5 1.5 0 0 1 1 5.5V5a.5.5 0 0 1 1 0v.5a.5.5 0 0 0 .5.5H3c0-1.364.547-2.601 1.432-3.503l-.41-1.352a.5.5 0 0 1 .333-.623zM4 7v4a4 4 0 0 0 3.5 3.97V7zm4.5 0v7.97A4 4 0 0 0 12 11V7zM12 6a3.989 3.989 0 0 0-1.334-2.982A3.983 3.983 0 0 0 8 2a3.983 3.983 0 0 0-2.667 1.018A3.989 3.989 0 0 0 4 6z" />
                        </svg>4
                    </h2>
                    <h3 class="mt-4">Opps! Không tìm thấy kết quả</h3>
                    <a href="/tin-tuc" class="flex justify-center">
                        <button class="btn_lienhe">
                            Quay lại trang tin tức
                        </button>
                    </a>

                </div>
            </div>
        }   
    </div>
</section>