@using web_ttkd.Models.Regions;
@model web_ttkd.Models.FinancePage
<!-- section banner PC-->
<div id="banner">
	<div class="d-none d-md-block">
		<div class="w-100 banner-display">
			<div style="max-height:100vh" class="swiper mySwiper_current">
				<div class="swiper-wrapper">
					@foreach (var item in Model.Banner)
					{
						@if (item != null && item != null && item.Media != null)
						{
							<div class="swiper-slide">
								<img loading="lazy" class="banner-img object-cover" src="@(item.Media.PublicUrl.Substring(1) ?? "")" alt="@item.Media.PublicUrl.Substring(1)" />
							</div>
						}
					}
				</div>
			</div>
		</div>
	</div>
	<div class="w-50 banner-wrapper ">
		<div thumbsSlider="" class="swiper mySwiper_thumb">
			<div class="swiper-wrapper thumb-swiper">
				@foreach (var item in Model.Banner)
				{
					@if (item != null && item != null && item.Media != null)
					{
						<div class="swiper-slide">
							<img  loading="lazy" class="w-100 h-full pointer" src="@(item.Media.PublicUrl.Substring(1) ?? "")" alt="@item.Media.PublicUrl.Substring(1)" />
						</div>
					}
				}
			</div>
		</div>
	</div>
</div>
<!-- section banner mobile-->
<div class="d-block d-md-none">
	<div class="intro-page">
